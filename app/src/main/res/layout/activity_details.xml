<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/personimageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="32dp"
                android:adjustViewBounds="true"
                android:background="#B5B5B6"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                app:srcCompat="@drawable/ic_baseline_personv2_24" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="51dp"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:foregroundGravity="bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.028"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/edit_textView2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="center|end"
                android:text="Edit"
                android:textColor="#162EB1"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.947"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="98dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Details"
                android:textColor="#0C0101"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/edit_textView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/NametextView"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Name"
                android:textColor="#0C0101"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personimageView" />


            <LinearLayout
                android:id="@+id/linearlayout8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingVertical="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NametextView"
                app:layout_constraintVertical_bias="0.021"
                tools:layout_editor_absoluteX="-30dp">

        <androidx.cardview.widget.CardView

             android:layout_width="wrap_content"
               android:layout_height="60dp"
            android:background="#E5E5E6">

                <TextView
                    android:id="@+id/phone_num_details"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="9354104463"
                    android:background="#E5E5E6"
                    android:textSize="18sp"
                    android:textStyle="bold" />

</androidx.cardview.widget.CardView>

                <com.google.android.material.imageview.ShapeableImageView

                    android:id="@+id/callButtonDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="#F8F8FA"
                    android:scaleType="centerCrop"
                    app:cardCornerRadius="100dp"
                    android:layout_marginLeft="50dp"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    app:srcCompat="@drawable/ic_baseline_local_phone_24" />


                <com.google.android.material.imageview.ShapeableImageView

                    android:id="@+id/msgButtonDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="#F3F3F4"
                    android:scaleType="centerCrop"
                    app:cardCornerRadius="100dp"
                    android:layout_marginLeft="30dp"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    app:srcCompat="@drawable/ic_baseline_message_24" />


                <com.google.android.material.imageview.ShapeableImageView

                    android:id="@+id/vcButtonDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="#F9F9FB"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="30dp"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    app:srcCompat="@drawable/ic_baseline_videocam_24" />


            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/linearlayout8"
                tools:ignore="MissingConstraints">

            </View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="@+id/linearlayout8"
                tools:ignore="MissingConstraints">

            </View>

            <TextView
                android:id="@+id/textview12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Call history"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintHorizontal_bias="0.043"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearlayout8" />

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/callHistoryRecView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview12"
                tools:listitem="@layout/feild_details" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>